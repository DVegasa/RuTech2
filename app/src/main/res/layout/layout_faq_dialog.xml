<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_dialog"
        android:elevation="4dp"
        android:padding="6dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

    <TextView
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Как знакомиться?"
            android:fontFamily="@font/monb"
            app:fontFamily="@font/monb"
            android:textSize="26sp"
            android:textColor="@color/black"/>

    <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:src="@drawable/peoples"/>

    <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Совет №3"
            android:fontFamily="@font/monb"
            app:fontFamily="@font/monb"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажми на карточку пользователя,\n чтобы обменяться визитками"
            android:textAlignment="center"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/monr"
            app:fontFamily="@font/monr"
            android:textSize="16sp"
            android:textColor="@color/black"/>


    <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/btnStart"
            android:text="Погнали!"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/monb"
            app:fontFamily="@font/monb"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="24dp"

            app:buttonColor="#FFCC00"
            app:unpressedGlowSize="8dp"
            app:pressedGlowSize="3dp"
            app:glowColor="#FFCC00"
            app:cornerRadius="18dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
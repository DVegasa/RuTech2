<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

    <TextView
            android:id="@+id/tvMeetup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monr"
            android:gravity="start"
            android:padding="12dp"
            android:text="MeetUp"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontFamily="@font/monr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/monb"
            android:text="Кем ты\nработаешь?"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:fontFamily="@font/monb"
            app:layout_constraintBottom_toTopOf="@+id/etJob"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:id="@+id/etJob"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColor="#fff"
            android:hint="Должность"
            android:inputType="textPersonName"
            android:textColorHint="#9FFFFFFF"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_edittext"
            android:fontFamily="@font/monb"
            app:fontFamily="@font/monb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintBottom_toTopOf="@+id/btn2"
            app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33FFCC00"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp" />

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFCC00"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33FFCC00"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp" />

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33FFCC00"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp" />

    </LinearLayout>

    <Button
            android:background="@drawable/bg_button"
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="24dp"
            android:fontFamily="@font/monb"
            android:text="Далее"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="17sp"

            app:fontFamily="@font/monb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>